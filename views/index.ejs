<!DOCTYPE 5>
<html>
	<head>
		<script src="/socket.io/socket.io.js"></script>
		<link rel="stylesheet" href="stylesheets/style.css">	
	</head>
	<body>
		<% if (message) { %>
			<div class="flash_message"><%= message %></div>
		<% } %>
		<% if (userid) { %>
			<div>Welcome, <%=userid%>!</div>
			<div><a href="/logout">LOGOUT</a></div>	
			<div><a href="/chat">CHAT</a></div>
			<div><a href="/flashcards">FLASHCARDS</a></div>
		<% } else { %>
			<div><a href="/login_form">LOGIN</a></div>
			<div><a href="/register_form">REGISTER</a></div>
		<% } %>
		
		<% if ((decks) && (decks.length > 0)) { %>
			<h1>Decks</h1>
			<ul>
			<% for (var i in decks) { %>
				<li><a href="/deck?id=<%= decks[i].deck_id%>"><%=decks[i].name %></a></li>
			<% } %>
			</ul>
		<% } %>
	</body>
</html>
